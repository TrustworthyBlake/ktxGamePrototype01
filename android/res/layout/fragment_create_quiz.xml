<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/createQuestionTextIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write question here" />

                <CheckBox
                    android:id="@+id/checkBoxTrueStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Statement is true" />

                <CheckBox
                    android:id="@+id/checkBoxFalseStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Statement is false" />

                <CheckBox
                    android:id="@+id/checkBoxIsQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Is question" />

                <CheckBox
                    android:id="@+id/checkBoxIsAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Is answer" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/addStatementButton"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add statement" />

            <Button
                android:id="@+id/addQuestionButton"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="Add question" />

            <Button
                android:id="@+id/createQuizButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Create Quiz" />

        </LinearLayout>
    </ScrollView>

</layout>