<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="181dp"
                android:layout_height="63dp"
                android:text="Welcome"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="29dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/homeUser_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="TextView"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/text_getStarted"
                android:layout_width="285dp"
                android:layout_height="72dp"
                android:layout_marginTop="300dp"
                android:gravity="center"
                android:text="Use the NavBar or swipe right to access modules or profile."
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeUser_name"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_launch_game"
                android:layout_width="214dp"
                android:layout_height="100dp"
                android:text="Enter World"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/text_getStarted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeUser_name"
                app:layout_constraintVertical_bias="0.535"
                android:layout_gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>