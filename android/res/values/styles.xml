<resources>
    <style name="GdxTheme" parent="android:Theme">
		<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#3700B3</item>
    </style>

    <style name ="RedTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
        <item name="android:textColor">#FFB30015</item>
    </style>

    <style name ="GreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#008E24</item>
        <item name="colorAccent">#03DA18</item>
        <item name="android:textColor">#FF008E24</item>
    </style>

    <style name ="OrangeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FF9800</item>
        <item name="colorAccent">#DAD603</item>
        <item name="android:textColor">#FFFF9800</item>
    </style>

    <style name ="PurpleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#E027FF</item>
        <item name="colorPrimaryDark">#9F00BA</item>
        <item name="colorAccent">#CB60F8</item>
        <item name="android:textColor">#FF9F00BA</item>
    </style>
</resources>
